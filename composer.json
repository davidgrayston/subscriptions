{
    "name": "dennisdigital/subscriptions_site",
    "description": "The marketing subscriptions site.",
    "type": "drupal-module",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,

    "config": {
    },

    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "vcs",
            "url": "https://github.com/marcelovani/dennis_profile"
        },
        {
            "type": "vcs",
            "url": "https://github.com/marcelovani/subscriptions_suite"
        }
    ],

    "scripts": {
        "post-install-cmd": [
            "@composer drupal-scaffold"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
    },

    "extra": {
        "installer-paths": {
          "docroot/core": ["drupal/core"],
          "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
          "docroot/modules/contrib/{$name}": ["type:drupal-module"],
          "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
          "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {
          "enable-patching" : true
        }
    },

    "require-dev": {
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "drush/drush": "^9.0",
        "phpunit/phpunit": "~4.8",
        "squizlabs/php_codesniffer": "2.*",
        "drupal/devel": "^1.0"
    },

    "require": {
        "cweagans/composer-patches": "^1.5.0",
        "composer/installers": "^1.0",
        "dennisdigital/dennis_profile" : "@dev",
        "dennisdigital/subscriptions_suite" : "@dev"
    }
}
